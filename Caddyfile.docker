:3000 {
    # Proxy API requests to backend
    handle /api/* {
        reverse_proxy backend:3001
    }

    # Proxy Socket.IO to backend (with WebSocket support)
    handle /socket.io/* {
        reverse_proxy backend:3001
    }

    # Serve frontend static files
    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }
}
